<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="create_grievance_form_template" name="Grievance Create">
        <t t-call="website.layout">
            <div class="container">
                <h3 class="text-center">Create Grievance</h3>
                <form class="mt-5" action="/create/grievance-registered" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" name="Subject" id="subject" placeholder="Subject"/>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" name="Description" id="description" placeholder="Description" />
                    </div>
                    <div class="form-group">
                        <label for="grievance_type">Supporters</label>
                        <select name="Supporter" id="Supporter_id" class="form-control" aria-label="Default select example" readonly='true'>
                            <t t-foreach="grievances_supporter" t-as="grivance">
                                <option t-out="grivance.name"/>
                            </t>    
                        </select>
                        
                    </div>
                    <div class="form-group">
                        <label for="grievance_type">Grievance Type</label>
                        <select name="GrivanceType" class="form-control" aria-label="Default select example">
                            <t t-foreach="grievance_type" t-as="type">
                                <option t-out="type.name"/>
                            </t>    
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="department">Department</label>
                         <select name="Department" class="form-control" aria-label="Default select example">
                            <t t-foreach="grievance_department" t-as="department">
                                <option t-out="department.name"/>
                            </t>    
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mb-5">Create Grievance</button>
                </form>
            </div>
        </t>
    </template>
   
    <record id="successfully_register" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/grievance-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">grievance.successfully_register</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="grievance.successfully_register">
                <t t-call="website.layout">
                    <div class="container">
                        <h1>Thanks!</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="alert alert-success" role="status">
                                    Your Grievance Register Successfully Registered...
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>

